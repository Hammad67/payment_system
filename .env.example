# ====================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# Copy to .env for local development
# Copy to .env.production for production
# ====================================

# Rails Configuration
RAILS_ENV=development
RAILS_MAX_THREADS=5

# PostgreSQL Configuration
# For local dev: postgres/postgres is fine
# For production: Use strong passwords!
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=payment_development

# Database Configuration
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_NAME=payment_development
DATABASE_TEST_NAME=payment_test
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=change_me_in_production

# Stripe Configuration (Get from https://dashboard.stripe.com/apikeys)
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# JWT Configuration (Generate with: bundle exec rake secret)
DEVISE_JWT_SECRET_KEY=generate_your_own_secret_key

# Application Configuration
SECRET_KEY_BASE=generate_your_own_secret_key_base
