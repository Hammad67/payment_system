<%if @transaction.present?%>
<%@transaction.all.each do |transaction|%>
  <div class="card col-4">
        <div class="card text-white bg-dark">
            <div class="card-body">
                <h5 class="card-title">BuyerName:<%=transaction.buyer.name%></h5>
                 <p class="card-text">Plan Nmae:<%=transaction.subscription.plan.name%></p>
                 <p class="card-text">Monthly Fee:<%=transaction.subscription.plan.monthly_fee%></p>
                 <p class="card-text">Amount:<%=transaction.amount%></p>
                 <p class="card-text">Billing Day:<%=transaction.billing_day%></p>
                 <%if transaction.is_successfull%>
                 <p class ="card-text">Status::::<button class="btn btn-success",href="#">Successfull</button></p>
                 <%else%>
                        <p class ="card-text">Status<button class="btn btn-warning",href="#">Unsuccessfull</button></p>
                 <%end%>
             </div>
        </div>
    </div>
<%end%>
<%end%>
<div class="actions">
  <%= link_to 'Back', root_path,class:"btn btn-danger",id:"button-id2" %>
  </div>
