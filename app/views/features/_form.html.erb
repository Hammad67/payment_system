<%= simple_form_for @feature  do |form| %>
 <div class="card card p-3 bg-gray">
      <h4 style="color: black">Add Feature</h4>
      <div style= "class:card-body bd-light;">
  <% if @feature.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feature.errors.count, "error") %> prohibited this plan from being saved:</h2>

      <ul>
        <% @feature.errors.full_messages.each do |message| %>
