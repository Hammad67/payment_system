<p id="notice"><%= notice %></p>


<h1>Features</h1>

<table class="table table-dark">
  <thead>
      <tr class="table-active">
      <th>Name</th>
      <th>Code</th>
      <th>Unitprice</th>
      <th>Max unit Limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feature.each do |feature| %>
      <tr>
        <td><%= feature.name %></td>
        <td><%= feature.code %>$</td>
         <td><%= feature.unit_price %></td>
        <td><%= feature.max_unit_limit %>$</td>
        <%if current_user.type=="Admin"%>
        <td><%= link_to 'Show', feature ,class:"btn btn-success"%></td>
        <td><%= link_to 'Edit', edit_feature_path(feature) , class:"btn btn-warning"%></td>
        <td><%= link_to 'Destroy', feature, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feature', new_feature_path,class:"btn btn-success"%>
<%= link_to 'Back', root_path,class:"btn btn-danger"%>
