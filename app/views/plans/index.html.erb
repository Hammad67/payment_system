<p id="notice"><%= notice %></p>


<h1>Plans</h1>

<table class="table table-dark">
  <thead>
      <tr class="table-active">
      <th>Name</th>
      <th>Monthly fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.name %></td>
        <td><%= plan.monthly_fee %>$</td>
        <%if current_user.type=="Admin"%>
        <td><%= link_to 'Show', plan ,class:"btn btn-success"%></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) , class:"btn btn-warning"%></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plan', new_plan_path,class:"btn btn-success"%>
<%= link_to 'Back', root_path,class:"btn btn-danger"%>
